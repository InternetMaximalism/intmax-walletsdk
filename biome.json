{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": ["**/components/ui/**", "**/bookmarklet.js"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useBlockStatements": "off"
			},
			"nursery": {
				"useImportRestrictions": "off"
			},
			"correctness": {
				"noUndeclaredVariables": "off"
			}
		}
	}
}
